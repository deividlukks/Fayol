# ==========================================
# WHATSAPP BOT CONFIGURATION
# ==========================================

NODE_ENV=development
WHATSAPP_BOT_NAME="Fayol Bot"
WHATSAPP_SESSION_DIR=./auth_info_baileys
WHATSAPP_LOG_LEVEL=info

# ==========================================
# API BACKEND
# ==========================================

API_BASE_URL=http://localhost:3333/api

# ==========================================
# PROVIDER OPTIONS
# ==========================================
# Valores: 'baileys' (QR Code) | 'meta' (API Oficial)
WHATSAPP_PROVIDER=baileys

# Meta API Credentials (apenas se WHATSAPP_PROVIDER=meta)
# META_ACCESS_TOKEN=your_meta_access_token
# META_PHONE_NUMBER_ID=your_phone_number_id
# META_WEBHOOK_VERIFY_TOKEN=your_verify_token
# WEBHOOK_URL=https://your-domain.com/webhooks/whatsapp

# ==========================================
# SESSION STORAGE
# ==========================================
# Valores: 'false' (em memória) | 'true' (Redis)
USE_REDIS_SESSIONS=false

# Redis Configuration (apenas se USE_REDIS_SESSIONS=true)
# REDIS_URL=redis://localhost:6379

# ==========================================
# RATE LIMITING
# ==========================================

RATE_LIMIT_MESSAGES_PER_MINUTE=30

# ==========================================
# MEDIA FEATURES
# ==========================================

MAX_MEDIA_SIZE_MB=16
ALLOWED_MEDIA_TYPES=image/jpeg,image/png,image/webp,audio/ogg,application/pdf

# ==========================================
# OCR (Optical Character Recognition)
# ==========================================
# OCR está sempre ativado com Tesseract.js
# Nenhuma configuração adicional necessária

# ==========================================
# SPEECH-TO-TEXT (Whisper API)
# ==========================================
# Configuração opcional - se não configurada, STT fica desabilitado
# OPENAI_API_KEY=sk-your_openai_api_key

# ==========================================
# GROUP SETTINGS
# ==========================================

ENABLE_GROUP_SUPPORT=true
GROUP_ADMIN_ONLY=false

# ==========================================
# WEB APP URL (para links de criação de conta)
# ==========================================

WEB_APP_URL=http://localhost:3000
